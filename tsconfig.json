{
	"compilerOptions": {
		"lib": ["es2021"],
		"target": "es2017",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"exclude": ["node_modules", "dist", "dump", "scripts"]
}